<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal">

    <include layout="@layout/math_trainer_toolbar"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow>

            <Button
                style="@style/ButtonStyle"
                android:text="@string/addition"
                android:id="@+id/buttonAddition"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginLeft="@dimen/button_margin_left"
                android:layout_marginRight="@dimen/button_margin_right"
                android:onClick="ButtonClickEvent"/>

            <Button
                style="@style/ButtonStyle"
                android:text="@string/subtraction"
                android:id="@+id/buttonSubtraction"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin_right"
                android:onClick="ButtonClickEvent"/>

        </TableRow>

        <TableRow>

            <Button
                style="@style/ButtonStyle"
                android:text="@string/multiplication"
                android:id="@+id/buttonMultiplication"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginLeft="@dimen/button_margin_left"
                android:layout_marginRight="@dimen/button_margin_right"
                android:onClick="ButtonClickEvent"/>

            <Button
                style="@style/ButtonStyle"
                android:text="@string/division"
                android:id="@+id/buttonDivision"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin_right"
                android:onClick="ButtonClickEvent"/>

        </TableRow>

        <TableRow>

            <Button
                style="@style/ButtonStyle"
                android:text="@string/take_a_test"
                android:id="@+id/takeTestButton"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginBottom="@dimen/button_margin"
                android:layout_marginLeft="@dimen/button_margin_left"
                android:layout_marginRight="@dimen/button_margin_right"
                android:onClick="ButtonClickEvent"/>

        </TableRow>

    </TableLayout>

</LinearLayout>