<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/resultToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorToolbarBackground"
        app:titleTextAppearance="@style/toolbarTextStyle"/>

    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context="com.adrianconstantin.mathtrainer.activity.ResultActivity">

            <TextView android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/result_text_size"
                android:lines="17"/>

            <Button
                android:id="@+id/facebookBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/facebook_btn_padding"
                android:text="Post on Facebook"
                android:drawableLeft="@drawable/ic_facebook_icon"
                android:textSize="@dimen/facebook_btn_text_size"
                android:background="@layout/button_facebook"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:onClick="ButtonClickEvent"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>